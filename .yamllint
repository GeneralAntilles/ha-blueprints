---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  indentation:
    spaces: 2
  comments:
    min-spaces-from-content: 1
  comments-indentation: {}
  trailing-spaces: {}
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
  new-line-at-end-of-file: {}

ignore: |
  .git/
  venv/
