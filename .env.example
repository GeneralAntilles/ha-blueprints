# Copy this to .env and fill in your details

# Path to your mounted Home Assistant config directory
# Example: /Volumes/homeassistant/config (macOS SMB mount)
HA_CONFIG_PATH="/path/to/mounted/ha/config"

# Home Assistant URL and long-lived access token
# Create token at: http://homeassistant.local:8123/profile
HA_URL="http://homeassistant.local:8123"
HA_TOKEN="your-long-lived-access-token-here"
